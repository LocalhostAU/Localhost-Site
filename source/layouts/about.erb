<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title><%= current_page.data.title || "Middleman" %></title>
    <meta content="<%= current_page.data.meta_description %>" name="description"/>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>


    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#74de7d">
    <meta name="theme-color" content="#ffffff">

    <script src="https://use.typekit.net/wze4wrh.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= stylesheet_link_tag :site %>
    <% ogp_tags do|name, value| %>
    <meta content="<%= value %>" property="<%= name %>"/>
    <% end %>
  </head>

  <body class=" <%= page_classes %> <%= current_page.data.body_classes %>">
  <script>document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/,'js');
</script>
    <%= partial "partials/header-internal" %>

    <main class="main about">
      <div class="page-title">
        <% if current_page.data.page_title %>
            <div class="title"><h1><%= current_page.data.page_title %></h1></div>
        <% end %>

        <div class="">
          <% if current_page.data.video_thumb %>
            <figure>
              <% if current_page.data.video_url %>
                <a href="<%= current_page.data.video_url %>" target="_blank">
              <% end %>

          		  <img src="<%= current_page.data.video_thumb %>" />

              <% if current_page.data.video_url %>
                </a>
              <% end %>

              <% if current_page.data.video_caption %>
          		  <figcaption><%= current_page.data.video_caption %></figcaption>
              <% end %>
          	</figure>
          <% end %>

          <% if current_page.data.lead_paragraph %>
              <p class="subtitle"><%= current_page.data.lead_paragraph %></p>
          <% end %>
        </div>
    </div>

    <%= yield %>

   </main><!-- .welcome -->
    <%= partial "partials/footer" %>

    <% if build? %>
      <%= partial "partials/tracking" %>
    <% end %>

    <%= javascript_include_tag('https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js') %>
    <%= javascript_include_tag('https://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.1/TweenMax.min.js') %>
    <%= javascript_include_tag('site.js') %>
  </body>
</html>
