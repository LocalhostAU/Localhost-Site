<div class="welcome">
  <header>
    <div class="logo">
      <%= partial "partials/logo" %>
    </div>
  </header>

  <section class="events">
    <div class="upcoming-event">
      <p class="date">
        <span class="month"><%= data.events.nextevent.month %></span>
        <span class="weekday"><%= data.events.nextevent.weekday %></span>
        <span class="day"><%= data.events.nextevent.day %></span>
      </p>
      <h2 class="title"><a href="#" title="Find out about <%= data.events.nextevent.title %>">
      <%= data.events.nextevent.title %></a></h2>
      <p class="speaker"><%= data.events.nextevent.speaker %>
        <span class="from"><%= data.events.nextevent.speaker_company %></span>
      </p>

      <p class="location"><%= data.events.nextevent.location %></p>

    </div>
    <div class="future-events">
      <ul>
          <% data.events.events.each do |event| %>
            <li>
              <% if event.date? %>
                <span class="date"><%= event.date %></span>
              <% end %>
              <% if event.link? %><a href="<%= event.link %>"><% end %><%= event.title %>
                <% if event.location? %>
                  <span class="location">(<%= event.location %>)</span>
                <% end %>
               <% if event.link? %></a><% end %>
            </li>
          <% end %>
      </ul>
    </div>
  </section>

<ul class="social">
  <li>
    <% link_to 'https://www.meetup.com/web-industry-meetup/' do %>
      <%= image_tag 'social/logo-meetup.jpg', alt: "Meetup" %>
    <% end %>
  </li>
  <li>
    <% link_to 'https://twitter.com/localhostau' do %>
      <%= image_tag 'social/logo-twitter.svg', alt: "Twitter" %>
    <% end %>
  </li>
</ul>




