<div class="flex-row deployment-event-details">
  <div class="flex-col deets-col">
    <% if locals[:deploymentCityDetailsTitle] %>
    <h2 class="deployment-city-details-title"><%= deploymentCityDetailsTitle %></h2>
    <% end %>

    <% if locals[:deploymentCityDetailsHashtag] %>
    <p class="deployment-city-details-hashtag"><%= deploymentCityDetailsHashtag %></p>
    <% end %>
    <% if locals[:deploymentCityTicketsLink] %>
      <a class="btn btn-deployment-tickets btn-<%= deploymentCityCode %> scrollTo" href="https://www.eventbrite.com.au/e/localhost-deployment-tickets-33542351075" target="_blank">
        Buy tickets
      </a>
    <% end %>
  </div>

  <% if locals[:deploymentCityDetailsMap] %>
    <div class="flex-col map-embed">
      <div class="embed-container">
        <iframe src="<%= deploymentCityDetailsMap %>" frameborder="0" style="border:0;" allowfullscreen></iframe>
      </div>
    </div>
  <% end %>

  <div class="flex-col">
    <h4>Location</h4>
    <% if locals[:deploymentCityDetailsLocation] %>
    <p class="deployment-city-details-venue">
      <%= deploymentCityDetailsLocation %>
    </p>
    <% end %>

    <% if locals[:deploymentCityDetailsAddress] %>
    <address>
      <a href="<%= deploymentCityAddressURL %>" title="Find <%= deploymentCityDetailsLocation %> on Google Maps" target="_blank">
        <%= deploymentCityDetailsAddress %>
      </a>
    </address>
    <% end %>
  </div>
</div>

<h3>Venue</h3>

