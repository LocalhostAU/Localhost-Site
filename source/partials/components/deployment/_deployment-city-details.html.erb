  <% if locals[:deploymentCityDetailsVenuePhoto1] %>
    <div class="flex-col venue-images">
      <% if locals[:deploymentCityDetailsVenuePhoto1] %>
      <div class="venue-image">
        <div class="venue-image-container">
          <img src="<%= deploymentCityDetailsVenuePhoto1 %>" />
        </div>
        <% if locals[:deploymentCityDetailsVenuePhoto1Caption] %>
          <p class="caption"><%= deploymentCityDetailsVenuePhoto1Caption %></p>
        <% end %>
      </div>
      <% end %>
      <% if locals[:deploymentCityDetailsVenuePhoto2] %>
      <div class="venue-image">
        <div class="venue-image-container">
          <img src="<%= deploymentCityDetailsVenuePhoto2 %>" />
        </div>
        <% if locals[:deploymentCityDetailsVenuePhoto2Caption] %>
          <p class="caption"><%= deploymentCityDetailsVenuePhoto2Caption %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  <% end %>

  <% if locals[:deploymentCityDetailsVenueTips] %>
    <div class="flex-col venue-tips-col">
      <ul>
        <% locals[:deploymentCityDetailsVenueTips].each do |venueTip| %>
        <li><%= venueTip %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="flex-row food-sponsors-row">
  <% if locals[:deploymentCityDetailsCatering] %>
    <div class="flex-col food-col">
      <h3>Food &amp; Drinks</h3>
      <%= deploymentCityDetailsCatering %>
    </div>
  <% end %>

  <% if locals[:deploymentCityDetailsEventSponsors] %>
    <div class="flex-col sponsor-col">
      <h3><%= deploymentCity %> Event <br/>Made Possible By</h3>
      <div class="sponsor-images">
        <% locals[:deploymentCityDetailsEventSponsors].each do |eventSponsors| %>
        <div class="sponsor-image">
          <img src="<%= eventSponsors %>" />
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
